<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="注册"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:navigationIcon="@drawable/ic_back_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_avatar"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:textSize="18sp"
                    android:text="请选择头像"
                    android:paddingLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:id="@+id/iv_avatar"
                    android:src="@drawable/ic_user_avatar_full_fill"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>


            </RelativeLayout>



            <EditText
                android:id="@+id/edt_phone"
                android:inputType="number"
                android:hint="请输入11位手机号"
                android:maxLength="11"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

            <View
                android:background="@color/color_ef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="46dp">

                <EditText
                    android:id="@+id/edt_code"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginRight="100dp"
                    android:background="@color/white"
                    android:hint="请输入验证码"
                    android:maxLength="6"
                    android:inputType="number"
                    android:paddingLeft="16dp"
                    app:layout_constraintRight_toRightOf="parent" />


                <TextView
                    android:id="@+id/tv_verify_code"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:background="@color/color_ef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <EditText
                android:id="@+id/edt_pwd"
                android:hint="请输入6-18位密码"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_phone"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

            <View
                android:background="@color/color_ef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <EditText
                android:id="@+id/edt_pwd_re"
                android:hint="请再次输入6-18位密码"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_phone"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

            <View
                android:background="@color/color_ef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <EditText
                android:id="@+id/edt_nickname"
                android:hint="请输入昵称(最大长度10)"
                android:maxLength="10"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_pwd"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

            <View
                android:background="@color/color_ef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <TextView
                android:id="@+id/edt_birthday"
                android:hint="请输入生日"
                android:maxLength="10"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_pwd"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

            <View
                android:background="@color/color_ef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_nickname"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/man"
                    android:text="男"
                    android:checked="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/women"
                    android:layout_marginLeft="20dp"
                    android:text="女"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RadioGroup>

            <View
                android:background="@color/color_ef"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <Button
                android:id="@+id/btn_register"
                android:text="注册"
                android:layout_marginTop="30dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_sex"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>